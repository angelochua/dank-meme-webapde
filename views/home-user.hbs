<!DOCTYPE html>
<html>
    <head>
        
        <link rel="stylesheet" 
              type="text/css" 
              href="style-index.css">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        
        <title>DANK</title>
        
        <style>
            
        
        </style>
    </head>
    
    <body>
         <div id="container-nav">
              
            <nav id="navbar">
                <ul>
                    <form action="post/home-user" method="post">
                        <button type="submit" id="home-button"><a><strong>DANK</strong></a></button>
                    </form>    
                    
                    <form action="post/search-user" method="post">
                        <input type="search" id="search-box" placeholder="Search..." name="tags">
                        <button type="submit" id = "searchSubmit"><i class="fa fa-search"></i></button>
                    </form>
                    
                    <form id="form-li" action="post/profile" method="post">
                    <li id="profile-li"><button type="submit" id="profile-button"><strong>Profile</strong></button></li>
                    </form>    
                    
                    <form id="form-li" action="post/upload" method="post">
                    <li id="upload-li"><button type="submit" id="upload-button"><strong><i class="fa fa-upload"></i> Upload</strong>
                    </button></li>
                    </form>    
                   
                    
                        
                </ul>


            </nav>
          </div> 
        <br>
        <div id ="sep"><p> space </p></div>
        <br>
        
        <div id="content-container">
         
            {{#each posts}} 
            <div class="post-container">
                
                <div class="icon"></div>
                <div class="name"><span><a>{{author}}</a></span></div>
                
                <div class="title-des">
                    <span><h1>{{title}}</h1></span>
                </div>
                
                <div class="description">
                    <span><h4>{{description}}</h4></span>
                </div>
                
                
                
                <div class="popup"> 
                    <a type= "hidden"> Id : {{_id}} Author : {{author}}<br> Privacy: {{privacy}}</a>
                    <a>
                        
                    <img id="my_image" src="/photo/{{id}}"/>
                    </a>
                </div>
                
                <div class="tags">
                    <span class="tag-cont">{{tags}}</span> <span class="space"> </span>
                </div>
                
            </div>
            {{/each}}
           
         </div> 
        
        
    </body>


</html>