<html>

    <head>
        <link rel="stylesheet" 
              type="text/css" 
              href="/style-index.css">
        
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>

    <body>
        
        <div id="container-nav">
              
            <nav id="navbar">
                <ul>
                    <form id="form-li"
                          action="home-user" method="post">
                        <button type="submit" id="home-button"><a><strong>DANK</strong></a></button>
                    </form>    
                    
                    <form id="form-li"
                          action="search" method="post">
                        <input type="search" id="search-box" placeholder="Search...">
                        <button type="submit" id = "searchSubmit"><i class="fa fa-search"></i></button>
                    </form>
                    
                     <form id="form-li" action="home-user" method="post">
                        <button type="submit" id="home-but"><a><strong><i class="fa fa-home"></i></strong></a></button>
                    </form>    
                    
                    <form id="form-li" action="profile" method="post">
                        <li><button type="submit" id="profile-button"><strong>Profile</strong></button></li>
                    </form>    
                </ul>


            </nav>
        </div>
        <br><br><br>
          <div id="upload-container">
            <form action="add" method="post" enctype="multipart/form-data">
           <div class="up-group"><input type="text" id = "title" placeholder="Title" name="title" required></div>
           
            
            
            <div class="up-tags"><textarea name="description" id = "description" placeholder="description" required></textarea></div>
            
            <span id="uplo">Upload: <input type="file" name = "photo" id = "image" required></span>    
            
            <br><br>
            <div class="tags-cont"><textarea role="combobox" id = "tags" placeholder="Tags" name="tags"></textarea></div> 
                
            <br>    
            <select name="status" id="meme-privacy">
               <option value="public">public</option>
               <option value="private">private</option>
           </select>
            
                
            
             
            
            <div><input type="text" id = "sharedto" placeholder="Share to" name="sharedto"></div>    
            
            <br>
            <div id="submit-cont">    
            <input id="submit-button" type = "submit" id = "submit">
            </div>    
            </form>
        </div>  
    </body>
</html>