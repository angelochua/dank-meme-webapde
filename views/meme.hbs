       <script>
                
           
           //////edit
           $("a.user").click(function(){
                    //get attr data-id from clicked button
                    var id = $(this).attr("data-id")
                    
                    //place data-id into input#deleteid
                    $("input#viewid").val(id)
                    
                    //submit the form #delete
                    $("form#viewuser").submit()
                })
           
           })
            
            
           
        </script>

        
