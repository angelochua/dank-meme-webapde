    <body>
         <div id="container-nav">
              
            <nav id="navbar">
                <ul>
                    <form action="/home" method="get">
                        <button type="submit" id="home-button"><a><strong>DANK</strong></a></button>
                    </form>  
                    
                    <form action="post/search" method="post">
                       <input type="text" id="search-box" placeholder="Search..." name="tags">
                        <button type="submit" id = "searchSubmit"><i class="fa fa-search"></i></button>   
                    </form>
                    
                    <form id="form-li" action="/login" method="post">
                        <li><button type="submit" id="login-button"><a><strong>Login</strong></a></button></li>
                    </form>
                    
                    <form id="form-li" action="/signup" method="post">
                        <button type="submit" id="signup-button"><a><strong>Sign Up</strong></a></button>
                    </form>
                    
                </ul>
            
             </nav>
             
        </div> 
        <br>
        <div id ="sep"><p> space </p></div>
        <br>
        
        <div id="content-container">
           {{#each posts}}
            {{#checkprivacy 'public' privacy}}
            <div class="post-container">
                
                <div class="icon"></div>
                <div class="name"><span><a>{{authorname}}</a></span></div>
                
                 <div class="title-des">
                    <span><h1>{{title}}</h1></span>
                </div>
                
                <div class="description">
                    <span><h4>{{description}}</h4></span>
                </div>
                
                
              
                    <a>
                       
                        <img id="my_image" src="/photo/{{id}}"/>
                    </a>
               
                <div class="tags">
                    <span class="tag-cont">{{tags}}</span> <span class="space"> </span>
                </div>
            
            </div>
            {{else}}
            {{/checkprivacy}}
            {{/each}}
         </div> 
        
        
    </body>


